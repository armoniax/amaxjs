{
    "include": [],
    "exclude": ["./packages/**/__mocks__", "./packages/*/*/lib"],
    "compilerOptions": {
        "target": "ES2016",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "strict": true,
        "stripInternal": true,
        "noImplicitAny": false
    }
}
